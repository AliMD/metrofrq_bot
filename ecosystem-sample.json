{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps": [{
      "name":   "MetroFrqBot",
      "script": "index.js",
      "args":   [],

      "out_file":   "out.log",
      "error_file": "err.log",
      "merge_logs": true,

      "autorestart": true,
      "max_restarts": 2,
      "ignore_watch": "*.json",
      "max_memory_restart": "200M",
      "post_update": ["npm install"],
      "exec_interpreter": "node",

      "env": {
        "BOT_TOKEN": "ABCDEF12345",
        "BOT_HOME" : "./metrofrq.db"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }]
}
